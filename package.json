{
  "name": "@qrsln/lootstrap",
  "version": "21.11.04-beta.0",
  "description": "LootStrap is a scss library and is still in beta! There is much to improve! Please keep your expectations low.",
  "style": "dist/css/lootstrap.css",
  "sass": "scss/lootstrap.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krsln/Lootstrap.git"
  },
  "keywords": [
    "css",
    "sass",
    "scss",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "author": "Qrsln",
  "license": "MIT",
  "files": [
    "dist/css",
    "scss/**/*.scss"
  ],
  "bugs": {
    "url": "https://github.com/krsln/Lootstrap/issues"
  },
  "homepage": "https://github.com/krsln/Lootstrap#readme",
  "scripts": {
    "css": "npm-run-all cleaning header css-compile css-clean-main:SassDoesnt css-prefix-main css-minify-main",
    "cleaning": "rimraf dist/css",
    "testHeader": "node build/Lootstrap.sh",
    "header": "node build/Lootstrap.js",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css scss/:dist/css/",
    "css-clean-main:SassDoesnt": "cleancss -O1 --format beautify --output dist/css/lootstrap.css dist/css/lootstrap.css",
    "css-prefix-main": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --output dist/css/lootstrap.min.css dist/css/lootstrap.css",
    "sass:Watch": "sass  --watch scss/:dist/css/",
    "/************        /        ************/": " --- End --- ",
    "p:live": "npm run css && npm publish --access public",
    "p:beta": "npm run css && npm publish --tag beta --access public"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "clean-css-cli": "^5.4.2",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4"
  }
}
